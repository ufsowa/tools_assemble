#!/bin/bash


export LC_NUMERIC=C

mkdir S
stpth=$PWD
cd data
for i in ./S$1; do
    cd $i
    for j in ./sample* ; do
	cd $j
	ID=${j##./sample}
	ok=0
	name=""
#	echo ${ID}
	for k in *000pic.xyz ; do
	    name=${k%%_*}
	    echo $name $ok
	    if [ $name -gt $ok ]; then
		ok=$name
	    fi
	done
#	cp -v $k $stpth/S/${ID}$k
	FILE=${ok}*000pic.xyz
	echo $FILE
	cp -v $FILE "$stpth/S/stech${ID}.xyz"
	cd ..
    done
    cd ..
done








